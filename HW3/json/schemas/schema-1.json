{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.org/schemas/online-shop-hierarchy.json",
    "title": "Online Shop hierarchy",
    "type": "object",
    "properties": {
        "@id": {
            "type": "string",
            "format": "uri-reference"
        },
        "Owner": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Owner"
            }
        }
    },
    "required": [
        "Owner"
    ],
    "$defs": {
        "Owner": {
            "type": "object",
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri-reference"
                },
                "Name": {
                    "type": "string"
                },
                "CompanyID": {
                    "type": "string"
                },
                "OwnsEshop": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/EShop"
                    }
                }
            },
            "required": [
                "Name",
                "CompanyID",
                "@id"
            ]
        },
        "EShop": {
            "type": "object",
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri-reference"
                },
                "Name": {
                    "type": "string"
                },
                "URL": {
                    "type": "string",
                    "format": "uri"
                },
                "Icon": {
                    "type": "string",
                    "format": "uri"
                },
                "ProvidesAccount": {
                    "$ref": "#/$defs/Account"
                }
            },
            "required": [
                "Name",
                "URL",
                "Icon",
                "@id"
            ]
        },
        "Account": {
            "type": "object",
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri-reference"
                },
                "Login": {
                    "type": "string"
                },
                "Password": {
                    "type": "string"
                },
                "ProvidesCart": {
                    "$ref": "#/$defs/Cart"
                }
            },
            "required": [
                "Login",
                "Password",
                "@id"
            ]
        },
        "Cart": {
            "type": "object",
          "properties": {
            "@id": {
              "type": "string",
              "format": "uri-reference"
            },
            "ItemCount": {
              "type": "integer"
            },
            "TotalPrice": {
              "type": "number"
            }
          },
            "required": [
                "ItemCount",
                "TotalPrice",
                "@id"
            ]
        }
    }
}
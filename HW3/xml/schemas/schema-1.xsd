<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:import namespace="http://www.w3.org/XML/1998/namespace"
        schemaLocation="https://www.w3.org/2009/01/xml.xsd" />
	
	<xs:complexType name="OwnerType">
		<xs:sequence>
			<xs:element name="Name" type="LangStringType" minOccurs="1" maxOccurs="1"/>
			<xs:element name="CompanyID" type="xs:string" minOccurs="1" maxOccurs="1"/>
			<xs:element name="EShop" type="EShopType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="EShopType">
		<xs:sequence>
			<xs:element name="Name" type="LangStringType" minOccurs="1" maxOccurs="1"/>
			<xs:element name="URL" type="xs:anyURI" minOccurs="1" maxOccurs="1"/>
			<xs:element name="Icon" type="xs:anyURI" minOccurs="1" maxOccurs="1"/>
			<xs:element name="Account" type="AccountType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="AccountType">
		<xs:sequence>
			<xs:element name="Login" type="LangStringType" minOccurs="1" maxOccurs="1"/>
			<xs:element name="Password" type="xs:string" minOccurs="1" maxOccurs="1"/>
			<xs:element name="Cart" type="CartType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="CartType">
		<xs:sequence>
			<xs:element name="ItemCount" type="xs:integer" minOccurs="1" maxOccurs="1"/>
			<xs:element name="TotalPrice" type="xs:decimal" minOccurs="1" maxOccurs="1"/>
		</xs:sequence>
	</xs:complexType>

	<xs:element name="EShopHierarchy">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Owner" type="OwnerType" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:complexType name="LangStringType">
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute ref="xml:lang" use="optional"/>
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
</xs:schema>